@using leavedays.Models;
@model List<ModuleShortInfo>


@if (Model.Count == 0)
{
    <text>No available for purchase modules</text>
}
else
{
    <table id="moduleTable">
        @for (int i = 0; i < Model.Count; i++)
        {
            @Html.Hidden("Index", i)
            <tr price="@Model[i].Price">
                <td>
                    @Html.CheckBoxFor(model => model[i].Checked)
                    @Html.HiddenFor(model => model[i].DefaultModuleId)
                </td>
                <td>@Model[i].Name</td>
                <td>@Model[i].Price per person per month.</td>
            </tr>
        }
    </table>
    <input type="submit" name="submit" value="Save" style="margin-top: 10px; margin-left: 10px;" />
}


